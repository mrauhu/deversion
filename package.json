{
  "name": "deversion",
  "version": "1.0.3",
  "private": true,
  "description": "Makes it possible to use NPM caching when versioning. Github Action that removes `version` from `package-lock.json`. Use it before the `actions/cache` step.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.release.json",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "preversion": "npm test",
    "version": "npm run build && npm run package && git add -A dist",
    "postversion": "git tag -f v1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrauhu/deversion.git"
  },
  "keywords": [
    "cache",
    "github",
    "action",
    "package-lock",
    "package-lock.json",
    "remove",
    "version"
  ],
  "author": "Sergey N <mrauhu@yandex.ru> (https://mrauhu.ru/)",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/parser": "^4.14.1",
    "@vercel/ncc": "^0.28.2",
    "eslint": "^7.24.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.5",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "mock-fs": "^4.13.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
